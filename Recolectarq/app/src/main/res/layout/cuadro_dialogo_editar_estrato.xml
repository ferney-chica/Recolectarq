<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constrainLayoutActualizarEstrato"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewActualizarEstratoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="16dp"
            android:text="Id Estrato:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewActualizarPozo_PerfilExpuestoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:text="Id Pozo/PerfilExpuesto:"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoId"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewActualizarEstratoTextura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="60dp"
            android:text="Textura:"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/editTextActualizarEstratoColor"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoTipoEstrato" />

        <Spinner
            android:id="@+id/spinnerActualizarEstratoTextura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoTextura"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoTipoEstrato" />

        <TextView
            android:id="@+id/textViewActualizarEstratoTipoEstrato"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:text="Tipo Estrato:"
            app:layout_constraintStart_toEndOf="@+id/editTextActualizarEstratoProfundidad"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarPozo_PerfilExpuestoId" />

        <Spinner
            android:id="@+id/spinnerActualizarEstratoTipoEstrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoTipoEstrato"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarPozo_PerfilExpuestoId" />

        <TextView
            android:id="@+id/textViewActualizarEstratoEstructura"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="68dp"
            android:text="Estructura:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoColor" />

        <Spinner
            android:id="@+id/spinnerActualizarEstratoEstructura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoEstructura"
            app:layout_constraintTop_toBottomOf="@+id/editTextActualizarEstratoColor" />

        <TextView
            android:id="@+id/textViewActualizarEstratoProfundidad"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="32dp"
            android:text="Profundidad:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoId" />

        <EditText
            android:id="@+id/editTextActualizarEstratoProfundidad"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoProfundidad"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoId" />

        <TextView
            android:id="@+id/textViewActualizarEstratoColor"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="56dp"
            android:text="Color:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoProfundidad" />

        <EditText
            android:id="@+id/editTextActualizarEstratoColor"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextActualizarEstratoProfundidad" />

        <TextView
            android:id="@+id/textViewActualizarEstratoObservacion"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:text="Observación:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualizarEstratoEstructura" />


        <EditText
            android:id="@+id/editTextActualizarEstratoObservacion"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="text|textMultiLine"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoObservacion"
            app:layout_constraintTop_toBottomOf="@+id/spinnerActualizarEstratoEstructura" />


        <Button
            android:id="@+id/buttonCancelarActualizarEstrato"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="40dp"
            android:text="Cancelar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextActualizarEstratoObservacion" />

        <Button
            android:id="@+id/buttonActualizarEstrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="40dp"
            android:text="Actualizar"
            app:layout_constraintStart_toEndOf="@+id/buttonCancelarActualizarEstrato"
            app:layout_constraintTop_toBottomOf="@+id/editTextActualizarEstratoObservacion" />

        <TextView
            android:id="@+id/textViewActualizarEstratoCodigoRotulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="344dp"
            android:layout_marginLeft="344dp"
            android:layout_marginTop="240dp"
            android:text="Código Rótulo:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextActualizarEstratoCodigoRotulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="240dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/textViewActualizarEstratoCodigoRotulo"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

    </ScrollView
        >
